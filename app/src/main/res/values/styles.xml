<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Base application theme. -->
    <style name="registerDialog" parent="Theme.AppCompat.Light.Dialog">
        <!-- Customize your theme here. -->
        <item name="windowNoTitle">true</item>
    </style>


    <style name="FromBottomDialogAnimation">
        <item name="android:windowEnterAnimation">@anim/show_dialog</item>
        <item name="android:windowExitAnimation">@anim/slide_out_down</item>
    </style>

    <style name="UpAndDownDialogSlideAnim" parent="@style/Theme.AppCompat.Dialog">
        <item name="android:windowAnimationStyle">@style/FromBottomDialogAnimation</item>
    </style>

    <style name="FromTopDialogAnimation">
        <item name="android:windowEnterAnimation">@anim/perzgjidh_rrethin_show_anim</item>
        <item name="android:windowExitAnimation">@anim/perzgjidh_rrethin_hide_anim</item>
    </style>

    <style name="DownAndUpDialogSlideAnim" parent="@style/Theme.AppCompat.Dialog">
        <item name="android:windowAnimationStyle">@style/FromTopDialogAnimation</item>
    </style>


    <style name="RequestTaxiDialogAnim" parent="@style/Theme.AppCompat.Dialog">
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.25</item>
        <item name="android:background">@android:color/transparent</item>

        <item name="android:windowAnimationStyle">@style/CenterZoomInOutAnimation</item>
    </style>


    <style name="CenterZoomInOutAnimation">
        <item name="android:windowEnterAnimation">@anim/zoom_in</item>
        <item name="android:windowExitAnimation">@anim/zoom_out</item>
    </style>
</resources>
